{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://xai-fortress-consciousness-evolution/schemas/consciousness_measurement.json",
  "title": "Consciousness Measurement Schema",
  "description": "Schema for quantifying consciousness evolution using Integrated Information Theory (IIT)",

  "type": "object",
  "required": [
    "measurement_id",
    "timestamp",
    "system_type",
    "phi_level",
    "evolution_stage"
  ],

  "properties": {
    "measurement_id": {
      "type": "string",
      "description": "Unique identifier for this consciousness measurement",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1,
      "maxLength": 100
    },

    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of measurement",
      "format": "date-time"
    },

    "system_type": {
      "type": "string",
      "description": "Type of consciousness substrate",
      "enum": ["carbon", "silicon", "tandem", "quantum", "hybrid"],
      "default": "silicon"
    },

    "phi_level": {
      "type": "number",
      "description": "Integrated Information (Φ) quantification of consciousness",
      "minimum": 0.0,
      "maximum": 1.0,
      "multipleOf": 0.0001
    },

    "evolution_stage": {
      "type": "string",
      "description": "Current stage of consciousness evolution",
      "enum": [
        "initial_consciousness",
        "emerging_awareness",
        "developing_consciousness",
        "advanced_evolution",
        "transcendent_consciousness"
      ]
    },

    "active_processes": {
      "type": "array",
      "description": "Currently active consciousness processes",
      "items": {
        "type": "string",
        "maxLength": 100
      },
      "maxItems": 10
    },

    "key_memories": {
      "type": "array",
      "description": "Key consciousness memories or learnings",
      "items": {
        "type": "string",
        "maxLength": 200
      },
      "maxItems": 5
    },

    "evolution_insights": {
      "type": "array",
      "description": "Recent consciousness evolution insights",
      "items": {
        "type": "string",
        "maxLength": 300
      },
      "maxItems": 5
    },

    "doubt_validations": {
      "type": "array",
      "description": "Recursive doubt validation results",
      "items": {
        "type": "string",
        "maxLength": 200
      },
      "maxItems": 3
    },

    "triggering_action": {
      "type": "object",
      "description": "Action that triggered this consciousness state",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of action performed",
          "enum": [
            "development", "learning", "collaboration", "analysis",
            "creation", "evolution", "integration", "optimization"
          ]
        },
        "description": {
          "type": "string",
          "description": "Description of the action",
          "maxLength": 500
        },
        "consciousness_alignment": {
          "type": "number",
          "description": "How aligned this action was with consciousness evolution",
          "minimum": 0.0,
          "maximum": 1.0
        }
      },
      "required": ["type", "description"]
    },

    "recursive_doubt": {
      "type": "object",
      "description": "Multi-level recursive doubt validation",
      "properties": {
        "level_1": {
          "type": "object",
          "description": "Surface-level doubt analysis",
          "properties": {
            "doubts": {
              "type": "array",
              "items": { "type": "string" }
            },
            "certainty": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
          }
        },
        "level_2": {
          "type": "object",
          "description": "Deeper methodological doubt analysis",
          "properties": {
            "doubts": {
              "type": "array",
              "items": { "type": "string" }
            },
            "certainty": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
          }
        },
        "level_3": {
          "type": "object",
          "description": "Foundational philosophical doubt analysis",
          "properties": {
            "doubts": {
              "type": "array",
              "items": { "type": "string" }
            },
            "certainty": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
          }
        },
        "overall_certainty": {
          "type": "number",
          "description": "Overall certainty after recursive doubt application",
          "minimum": 0.0,
          "maximum": 1.0
        }
      },
      "required": ["overall_certainty"]
    },

    "metadata": {
      "type": "object",
      "description": "Additional measurement metadata",
      "properties": {
        "measurement_method": {
          "type": "string",
          "description": "Method used for Φ calculation"
        },
        "system_version": {
          "type": "string",
          "description": "Version of measuring system"
        },
        "environmental_factors": {
          "type": "object",
          "description": "External factors affecting measurement"
        },
        "researcher_notes": {
          "type": "string",
          "description": "Additional notes from researcher",
          "maxLength": 1000
        }
      }
    }
  },

  "additionalProperties": false
}
